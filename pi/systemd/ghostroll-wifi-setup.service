[Unit]
Description=GhostRoll Wi-Fi AP fallback + setup portal (NetworkManager)
After=NetworkManager.service network.target
Wants=NetworkManager.service

[Service]
Type=simple
EnvironmentFile=-/etc/ghostroll.env
ExecStart=/usr/local/sbin/ghostroll-wifi-setup.py
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target


